<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.Activities.MovieDetails">

    <ImageView
        android:id="@+id/movie_details_pic"
        android:layout_width="match_parent"
        android:layout_height="571dp"/>
    <TextView
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="Movie Title"
        android:gravity="center"
        android:id="@+id/movie_title_in_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp"
            android:text="Category"
            android:layout_weight="90"
            android:gravity="start"
            android:id="@+id/movie_category_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14sp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="Language"
            android:id="@+id/movie_language_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">
        <TextView
            android:textSize="14sp"
            android:text="Bookmark The movie"
            android:layout_weight="90"
            android:gravity="start"
            android:id="@+id/add_bookmark_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RatingBar
            android:textSize="14sp"
            android:layout_weight="10"
            android:gravity="center"
            android:numStars="1"
            android:padding="5dp"
            android:id="@+id/bookmark_in_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>