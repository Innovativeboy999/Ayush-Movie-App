<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:id="@+id/card_view__movie_display_model"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/movie_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="280dp"/>

            <TextView
                android:visibility="gone"
                android:text="Movies Pics Not available in Offline Mode"
                android:layout_width="match_parent"
                android:id="@+id/text_img_placeholder"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:src="@drawable/ic_launcher_background"
                android:layout_height="280dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:text="Movie Title"
                    android:gravity="center"
                    android:id="@+id/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <TextView
                android:visibility="gone"
                android:textSize="16sp"
                android:text="Remove Movie From Saved"
                android:textColor="#C813B4"
                android:layout_weight="90"
                android:gravity="start"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:id="@+id/remove_bookmark_in_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RatingBar
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>